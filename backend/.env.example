# Environment Configuration for Openly Backend

# Database
MONGODB_URL=mongodb://mongodb:27017/failure_sharing

# Redis
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-min-32-chars

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
FROM_EMAIL=noreply@openly.com

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Server Configuration
PORT=8000

# OAuth Providers (Optional - Configure when ready)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Monitoring (Optional - Configure for production)
SENTRY_DSN=
LOG_LEVEL=INFO
